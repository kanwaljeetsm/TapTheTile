                android:height="0dp"
                android:background="@color/tileDefault"
                android:onClick="onClick"
                android:padding="20dp"
                android:visibility="visible"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/placeNine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:height="0dp"
                android:background="@color/tileDefault"
                android:onClick="onClick"
                android:padding="20dp"
                android:visibility="visible"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/placeTen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:height="0dp"
                android:background="@color/tileDefault"
                android:onClick="onClick"
                android:padding="20dp"
                android:visibility="visible"
