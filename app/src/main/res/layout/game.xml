                android:onClick="onClick"
                android:padding="20dp"
                android:visibility="visible"
                app:layout_column="3"
                app:layout_columnWeight="1"
                app:layout_row="2"
                app:layout_rowWeight="1" />

            <TextView
                android:id="@+id/placeThirteen"
                android:layout_width="0dp"
